<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <% user_color = "black" %>
            <% user = post.user %> 
            <% if user.rate >= 2800    %>   
            <%   user_color = "red" %>
            <% elsif user.rate >= 2400 %>
            <%   user_color = "orange" %>
            <% elsif user.rate >= 2000 %>
            <%   user_color = "yellow" %>
            <% elsif user.rate >= 1600 %>
            <%   user_color = "blue" %>
            <% elsif user.rate >= 1200 %>
            <%   user_color = "cyan" %>
            <% elsif user.rate >= 800 %>
            <%   user_color = "green" %>
            <% elsif user.rate >= 400 %>
            <%   user_color = "brown" %>
            <% elsif user.rate >= 0 %>
            <%   user_color = "gray" %>
            <% else %>
            <%   user_color = "black" %>
            <% end %>

           <%= link_to(post.user.name, "/users/#{post.user.id}", :style => "color:#{user_color};") %>
          </div>
          <%= link_to(post.content, "/posts/#{post.id}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>